{
  "name": "the-shape-of-experience",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/build-toc.mjs && next dev",
    "build": "node scripts/build-toc.mjs && node scripts/build-search-index.mjs && next build",
    "start": "next start",
    "convert-to-tsx": "node scripts/convert-to-tsx.mjs",
    "generate-audio": "node scripts/generate-audio.mjs",
    "generate-latex": "node scripts/tsx-to-latex.mjs",
    "generate-pdf": "node scripts/tsx-to-latex.mjs && cd ../book && latexmk -pdf book.tex",
    "extract-text": "node scripts/extract-text.mjs",
    "generate-icons": "node scripts/generate-icons.mjs",
    "deploy": "vercel deploy --yes --prod",
    "db:migrate": "npx tsx scripts/migrate.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.26",
    "@ai-sdk/react": "^3.0.81",
    "@neondatabase/serverless": "^1.0.2",
    "ai": "^6.0.79",
    "bcryptjs": "^3.0.3",
    "drizzle-orm": "^0.45.1",
    "katex": "^0.16.18",
    "next": "^15.1.0",
    "next-auth": "^5.0.0-beta.30",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "drizzle-kit": "^0.31.9",
    "sharp": "^0.34.5",
    "typescript": "^5.7.0"
  }
}
